<%- include('header'); -%>


    <div class="box" id="heading">
        <h1>It's a <%=listTitle%> !</h1>
    </div>
    <div class="box">
        <% newListItems.forEach(function(element){%> 
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkBos" value="<%=element._id%>" onchange="this.form.submit()"/> 
                    <p> <%= element.item %></p>
                </div> 
            </form>
            

        <% });%> 

        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="item"/>
            <button type="submit" name="button" value=<%= listTitle %>>+</button>
        </form>
    </div>
    

        
<%- include('footer'); -%>    

    
    
